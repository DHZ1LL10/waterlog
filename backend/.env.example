# Entorno
ENVIRONMENT=development
# ENVIRONMENT=production

# Base de datos
DATABASE_URL=sqlite:///./data/waterlog.db
# Para PostgreSQL en el futuro:
# DATABASE_URL=postgresql://user:password@localhost/waterlog

# Seguridad
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Configuraci√≥n de planta
PLANT_ID=1
PLANT_NAME=Planta Centro

# Precios (en pesos mexicanos)
BOTTLE_PRICE=60.00

# API
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost"]

# Archivos
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=5242880  # 5MB en bytes

# Logs
LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG